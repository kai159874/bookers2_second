<div class="row">
  <div class="col-lg-6 col-md-8 col-sm-10 mx-auto px-4">
    <h1>User info</h1>

    <% if @user.errors.any? %>
      <strong class="h3">
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      </strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @user, local: true do |f| %>
      <div class="field">
        <%= f.label :name, "Name" %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :profile_image, "image" %><br />
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class="field">
        <%= f.label :introduction, "introduction" %><br />
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Update User", class: "btn btn-secondary my-3" %>
      </div>
    <% end %>
  </div>
</div>