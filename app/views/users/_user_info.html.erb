<div class="container">
  <h2>User info</h2>
    <div>
      <%= image_tag user.get_profile_image(100, 100) %>
    </div>
  <table class="table">
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>follows</th>
      <td id="follow_counts">
        <%= link_to user.followings.count, user_followings_path(user) %>
      </td>
    </tr>
    <tr>
      <th>followers</th>
      <td id="follower_counts">
        <%= link_to user.followers.count, user_followers_path(user) %>
      </td>
    </tr>
  </table>
  <% if current_user != user %>
    <div id="btn_<%= user.id %>">
      <%= render "relationships/follow_btn", user: user %>
    </div>
  <% else %>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary w-100" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>
</div>