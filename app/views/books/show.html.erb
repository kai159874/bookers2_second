<div class="row">
  <div class="col-md-3">
    <%= render "users/user_info", user: @user %>
    <%= render "books/new_book" %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%=link_to user_path(@user.id), method: :get do %>
            <%= image_tag @book.user.get_profile_image(100,100) %></br><%= @book.user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path, method: :get, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, class: "btn  btn-sm btn-danger", data: {confirm: "削除しますか？"} %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>