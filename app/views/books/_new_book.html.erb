<div class="container">
  <h2>New book</h2>
  <%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>
    <div class="field">
      <%= f.label :title, "Title" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field mt-3">
      <%= f.label :body, "Opinion" %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
    </div>
  <% end %>
</div>
